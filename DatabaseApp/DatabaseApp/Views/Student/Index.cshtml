@model List<DatabaseApp.Models.Student>

<h1>Students</h1>

<a asp-controller="Student" asp-action="Create">Create</a>


<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Batch</th>
            <th scope="col">Action</th>
        </tr>

        <tbody>
            @{
           int count = 1;
        }
            @foreach (var std in Model)
            {
                <tr>
                <td>@count</td>
                <td>@std.sname</td>
                <td>@std.semail</td>
                <td>@std.sbatch</td>
                <td>
                    <a asp-controller="Student" asp-action="Edit" asp-route-id="@std.sid">Edit</a> |
                    <a asp-controller="Student" asp-action="Delete" asp-route-id="@std.sid" onclick="return confirm('Are you sure to want to delete this Record');">Delete</a>
                </td>
                </tr>
                count++;
            }

        </tbody>
    </thead>
   
</table>


